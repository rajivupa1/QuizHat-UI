<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/card_itemcourse_elevation"
    android:elevation="3dp"
    android:layout_marginBottom="5dp">

    <!--    app:cardElevation="10dp"-->

    <RelativeLayout
        android:id="@+id/Course_layout"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:background="@drawable/course_background"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/course_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/subimage"/>
        <TextView
            android:id="@+id/txt_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPSC"
            android:textColor="@color/black"
            android:fontFamily="@font/proximanovaregular"
            android:layout_toRightOf="@id/course_image"
            android:textSize="19sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"/>

            <TextView
                            android:id="@+id/text_tensure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_toRightOf="@id/course_image"
                            android:text="tensure"
                android:layout_below="@id/txt_course"
                            android:visibility="visible"
                            android:textColor="#111"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/text_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:text="amount"
                            android:layout_toRightOf="@id/course_image"
                            android:layout_below="@id/text_tensure"
                            android:visibility="visible"
                            android:textColor="#111"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:id="@+id/layout_buy_test"
                            android:layout_width="65dp"
                            android:layout_height="35dp"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@id/text_amount"
                            android:visibility="visible"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >
                            <TextView
                                android:id="@+id/txt_buy_test"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="@color/header"
                                android:visibility="visible"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/proximanovaregular"
                                android:text="Subscribe"/>
                        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
