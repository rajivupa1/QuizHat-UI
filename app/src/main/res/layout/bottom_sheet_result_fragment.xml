<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_attempted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp">
        <TextView
            android:id="@+id/attemted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Attemted"
            android:layout_marginStart="5dp"
            android:textSize="17sp"
            android:textColor="#111"/>
        <TextView
            android:id="@+id/total_attempted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.A."
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textSize="17sp"
            android:textColor="#111"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_question_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_marginEnd="5dp"
        android:layout_below="@id/layout_attempted"
        android:layout_marginStart="5dp">
        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question For Review"
            android:layout_marginStart="5dp"
            android:textSize="17sp"
            android:textColor="#111"/>
        <TextView
            android:id="@+id/total_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.A."
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textSize="17sp"
            android:textColor="#111"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_question_unattempted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_marginEnd="5dp"
        android:layout_below="@id/layout_question_review"
        android:layout_marginStart="5dp">
        <TextView
            android:id="@+id/unattempted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question Not Attempted"
            android:layout_marginStart="5dp"
            android:textSize="17sp"
            android:textColor="#111"/>
        <TextView
            android:id="@+id/total_unattempted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.A."
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textSize="17sp"
            android:textColor="#111"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_question_submitreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_marginEnd="5dp"
        android:layout_below="@id/layout_question_unattempted"
        android:layout_marginStart="5dp">
        <TextView
            android:id="@+id/submit_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submitted and Review"
            android:layout_marginStart="5dp"
            android:textSize="17sp"
            android:textColor="#111"/>
        <TextView
            android:id="@+id/total_submit_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.A."
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textSize="17sp"
            android:textColor="#111"/>
    </RelativeLayout>

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/layout_question_submitreview"
        android:background="@drawable/submit_test_bootom"
        android:fontFamily="@font/proximanovaregular"
        android:padding="16dp"
        android:text="Submit Test"
        android:onClick="nextactivity"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button_back_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/layout_question_submitreview"
        android:layout_toRightOf="@id/button_submit"
        android:background="@drawable/backtest"
        android:fontFamily="@font/proximanovaregular"
        android:padding="16dp"
        android:text="Back to Test"
        android:onClick="nextactivity"
        android:textColor="@color/white" />
</RelativeLayout>
